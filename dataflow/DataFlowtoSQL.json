{
	"name": "DataFlowtoSQL",
	"properties": {
		"description": "Flujo de datos a SQL",
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorage2",
						"type": "LinkedServiceReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [],
			"scriptLines": [
				"parameters{",
				"     SistemArchivos as string ('fsdiplomado'),",
				"     DirectorioOrigen as string ('Carlos/Address'),",
				"     NombreArchivo as string ('Address*.parquet')",
				"}",
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet',",
				"     fileSystem: ($SistemArchivos),",
				"     wildcardPaths:[(concat($DirectorioOrigen,'/',$NombreArchivo))]) ~> source1"
			]
		}
	}
}